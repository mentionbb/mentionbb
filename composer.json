{
    "name": "mentionbb/mentionbb",
    "description": "A classic forum system with next-gen.",
    "version": "1.0.20",
    "type": "project",
    "keywords": [
        "forum",
        "community"
    ],
    "homepage": "https://mentionbb.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Par274",
            "email": "parantezprojects@gmail.com",
            "homepage": "https://github.com/par274",
            "role": "Developer"
        }
    ],
    "config": {
        "vendor-dir": "./www/src/vendor",
        "process-timeout": 1800,
        "allow-plugins": {
            "cweagans/composer-patches": true
        }
    },
    "require": {
        "php": ">=8.4",
        "symfony/routing": "^7",
        "symfony/http-foundation": "^7",
        "symfony/yaml": "^7",
        "matthiasmullie/minify": "^1.3",
        "symfony/filesystem": "^7",
        "twig/twig": "^3",
        "nesbot/carbon": "^2.11",
        "markrogoyski/math-php": "0.*",
        "symfony/config": "^7",
        "guzzlehttp/guzzle": "^7",
        "doctrine/dbal": "^4",
        "laminas/laminas-escaper": "^2.6",
        "socialconnect/auth": "^3.1",
        "socialconnect/http-client": "^1.0",
        "symfony/cache": "^7",
        "phpgangsta/googleauthenticator": "dev-master",
        "matomo/device-detector": "^6",
        "joypixels/emoji-toolkit": "^9",
        "google/recaptcha": "^1",
        "symfony/dom-crawler": "^7",
        "symfony/css-selector": "^7",
        "kevinrob/guzzle-cache-middleware": "^5",
        "symfony/event-dispatcher": "^7",
        "masterminds/html5": "^2.7",
        "symfony/uid": "^7",
        "voku/portable-utf8": "^6",
        "symfony/dependency-injection": "^7",
        "symfony/mailer": "^7",
        "nikic/php-parser": "^5",
        "symfony/console": "^7",
        "nelexa/zip": "^4.0",
        "symfony/finder": "^7",
        "symfony/process": "^7",
        "symfony/error-handler": "^7",
        "symfony/serializer": "^7",
        "symfony/property-access": "^7",
        "symfony/framework-bundle": "^7",
        "symfony/twig-bundle": "^7",
        "vlucas/phpdotenv": "^5.6",
        "symfony/http-client": "^7.2",
        "nyholm/psr7": "^1.8",
        "usarise/turnstile": "^0.7"
    },
    "require-dev": {
        "symfony/var-dumper": "^7",
        "cweagans/composer-patches": "^2",
        "symplify/vendor-patches": "^12"
    },
    "autoload": {
        "psr-4": {
            "Binaries\\": "./www/bin",
            "ComponentBundle\\": "./www/src/Addons/Mention",
            "App\\": "./www/src/App",
            "Addons\\": "./www/src/Addons",
            "Install\\": "./www/src/Install"
        },
        "classmap": [
            "./www/src/RequireChecker.php"
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "composer dump-autoload -o",
            "sh -c 'if [ -d .git ]; then COMMIT=$(git rev-parse --short HEAD) && BRANCH=$(git rev-parse --abbrev-ref HEAD) && REPO_RAW=$(git config --get remote.origin.url) && REPO_HTTPS=$(echo \"$REPO_RAW\" | sed -E \"s#git@([^:]+):#https://\\1/#\" | sed \"s/\\.git$//\") && COMMIT_URL=\"$REPO_HTTPS/commit/$COMMIT\" && printf \"{\\n    \\\"repo_url\\\": \\\"$REPO_HTTPS\\\",\\n    \\\"commit_id\\\": \\\"$COMMIT\\\",\\n    \\\"branch_name\\\": \\\"$BRANCH\\\",\\n    \\\"commit_url\\\": \\\"$COMMIT_URL\\\"\\n}\" > build.json; fi'"
        ]
    },
    "extra": {
        "patches": {
            "voku/portable-utf8": [
                "./www/src/patches/voku-portable-utf8-src-voku-helper-utf8-php.patch"
            ],
            "symfony/finder": [
                "./www/src/patches/symfony-finder-iterator-vcsignoredfilteriterator-php.patch"
            ],
            "phpgangsta/googleauthenticator": [
                "./www/src/patches/phpgangsta-googleauthenticator-phpgangsta-googleauthenticator-php.patch"
            ],
            "symfony/error-handler": [
                "./www/src/patches/symfony-error-handler-errorrenderer-htmlerrorrenderer-php.patch"
            ]
        }
    }
}
